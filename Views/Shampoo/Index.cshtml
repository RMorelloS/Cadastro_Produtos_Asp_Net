
@{
    ViewBag.Title = "Index";

}

@using Aula03_MVC_02.Controllers
@using (Html.BeginForm("cadastraShampoo", "Shampoo", FormMethod.Post))
{

    <input type="text" value="@TempData["id"]" readonly="readonly" placeholder="id" name="id" />
    <br />
    <input type="text" value="" placeholder="nome" name="nome" />
    <br />
    <input type="text" value="" placeholder="tipo sabão" name="tipoSabao" />
    <br />
    <br />
    <br />
    <br />
    <input type="submit" hidden id="botaoSubmit" />
    <button class="cybr-btn" onclick="botaoSubmit.click()">
        Cadastrar <span aria-hidden>_</span>
        <span aria-hidden class="cybr-btn__glitch">Buttons_</span>
        <span aria-hidden class="cybr-btn__tag">Shampoo</span>
    </button>

    if (TempData["result"] != null)
    {
        <script type="text/javascript">
            alert("Cadastrado com sucesso!");
        </script>
    }
}